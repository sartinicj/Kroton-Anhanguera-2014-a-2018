algoritmo "13"
var
a: inteiro

inicio
// Seção de Comandos
escreval ("Digite um número")
leia (a)
se (a) MOD 2 = 0 entao
   escreval ("Este número é par")
senao
   escreval ("Este número é ímpar")
fimse
se a >= 0 entao
   escreval ("Este número é positivo")
senao
   escreval ("Este número é negativo")
fimse
fimalgoritmo
